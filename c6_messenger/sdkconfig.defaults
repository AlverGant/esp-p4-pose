# Enable CA bundle for HTTPS (Telegram)
CONFIG_MBEDTLS_CERTIFICATE_BUNDLE=y
CONFIG_MBEDTLS_CERTIFICATE_BUNDLE_DEFAULT_FULL=y

# CRITICAL: Disable UART0 console to use it for P4 communication
# This prevents console from interfering with UART0 RX/TX
CONFIG_ESP_CONSOLE_UART_NONE=y
CONFIG_ESP_CONSOLE_NONE=y

# Disable secondary console to free UART0 completely
CONFIG_ESP_CONSOLE_SECONDARY_NONE=y

# Disable log output to UART to prevent interference
CONFIG_LOG_DEFAULT_LEVEL_NONE=n
CONFIG_LOG_DEFAULT_LEVEL_ERROR=n
CONFIG_LOG_DEFAULT_LEVEL_WARN=n
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
CONFIG_LOG_DEFAULT_LEVEL_DEBUG=n
CONFIG_LOG_DEFAULT_LEVEL_VERBOSE=n

# Custom partition table with larger app size
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"

