menu "Wi-Fi"

    config WIFI_SSID
        string "Wi-Fi SSID"
        default ""

    config WIFI_PASSWORD
        string "Wi-Fi Password"
        default ""

endmenu

menu "Telegram"

    config TELEGRAM_BOT_TOKEN
        string "Telegram Bot Token (botXXXX:token)"
        default ""

    config TELEGRAM_CHAT_ID
        string "Telegram Chat ID"
        default ""

    config TELEGRAM_COOLDOWN_SEC
        int "Cooldown entre mensagens (s)"
        default 60
        range 5 3600

endmenu

menu "ESP-Hosted Alerts"

    config HOSTED_ALERT_SERVER_ENABLE
        bool "Habilitar servidor HTTP para alertas do P4"
        default y

    config HOSTED_ALERT_SERVER_PORT
        int "Porta HTTP para receber alertas"
        default 8080
        range 1 65535
        depends on HOSTED_ALERT_SERVER_ENABLE

    config HOSTED_ALERT_MAX_BODY_LEN
        int "Tamanho m√°ximo da mensagem (bytes)"
        default 256
        range 64 2048
        depends on HOSTED_ALERT_SERVER_ENABLE

endmenu

menu "UART Input"

    config UART_BAUD
        int "UART baud"
        default 115200
        range 9600 2000000

endmenu
